<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/img"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:layout_marginTop="100dp"
       >

        <TextView
            android:id="@+id/textView1_3"
            style="@style/textview1"
            android:text="@string/id"
            android:gravity="right"
             />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="\t:\t\t"
            />

        <EditText
            android:id="@+id/editTextId1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="left"
            android:background="@android:color/transparent"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/textView3_3"
            style="@style/textview1"
            android:text="@string/name"
            android:gravity="right"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="\t:\t\t"
            />

        <EditText
            android:id="@+id/editTextName3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="left"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/textView4_3"
            style="@style/textview1"
            android:text="@string/age"
            android:gravity="right"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="\t:\t\t"
            />
        <EditText
            android:id="@+id/editTextAge4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="left"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/textView5_3"
            style="@style/textview1"
            android:text="@string/mbti"
            android:gravity="right"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="\t:\t\t"
            />

        <EditText
            android:id="@+id/editTextMbti5_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="left"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnlogin3_3"
        style="@style/edittext1"
        android:text="@string/exit"
        android:textColor="@drawable/select_text"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="100dp"
        android:drawableStart="@drawable/img"
        android:paddingStart="130dp"
        android:drawablePadding="-130dp"
        android:background="@drawable/select"
        android:layout_height="wrap_content"
        android:onClick="doOnBtnClick" />
</LinearLayout>